<%= render "layouts/header_admin" %>
<div class="container">
  <h3>商品新規登録</h3>
  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <table>
      <tbody>
        <tr>
          <td><%= f.label "商品画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label "商品名" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label "商品説明" %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label "ジャンル" %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択してください"}, :id => 'genre_id' %></td>
        </tr>
        <tr>
          <td><%= f.label "税抜価格" %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.label "販売ステータス" %></td>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label "販売中"%>
            <%= f.radio_button :is_active, false %>
            <%= f.label "販売停止中" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success text-light" %>
          </td>
        </tr>
       </tbody>
    </table>
  <% end %>
</div>