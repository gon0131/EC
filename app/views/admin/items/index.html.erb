<%= render "layouts/header_admin" %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>商品一覧</h3>
    </div>
    <div class="col-8"></div>
    <div class="col-1">
      <%= link_to new_admin_item_path, class: "text-dark" do %>
        <h3><i class="fas fa-plus-circle"></i></h3>
      <% end %>
    </div>
  </div>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td>ジャンル</td>
        <td>ステータス</td>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_active == true %>
          <td class="text-success">販売中</td>
        <% else %>
          <td class="text-secondary">販売停止中</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>