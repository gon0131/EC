<%= render "layouts/header_admin" %>
<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>
  <div class="row">
    <div class="col-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success text-light"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>