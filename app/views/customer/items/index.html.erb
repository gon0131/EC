<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col-sm-3 pt-4">
      <table class="table border border-dark">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <div class="tag-box">
                <%= link_to genre.name, items_path(genre_id: genre.id), class:"text-dark" %>
            </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-9 pt-4">
      <h3><strong>商品一覧</strong>(全<%= @items.count %>件)</h3>
      <div class="row">
          <% @items.each do |item| %>
            <% if item.is_active == true %>
            <div class="col-4">
            <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,200) %></br>
            <% end %>
            <%= link_to item.name, item_path(item.id) %></br>
            ¥<%= item.with_tax_price %>
            </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>