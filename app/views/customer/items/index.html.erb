<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col-3">
      <h3><strong>商品一覧</strong>(全<%= @items.count %>件)</h3>
    </div>
  </div>
  <div class="row">
      <% @items.each do |item| %>
        <% if item.is_active == true %>
        <div class="col-3">
        <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image(200,200) %></br>
        <% end %>
        <%= link_to item.name, item_path(item.id) %></br>
        ¥<%= item.with_tax_price %>
        </div>
        <% end %>
      <% end %>
  </div>
</div>