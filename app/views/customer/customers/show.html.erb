<%= render "/layouts/header" %>
<div class="container">
  <h3>マイページ</h3>
  <div class="row" >
    <div class="col-lg-4">
      <h4>登録情報
      <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success text-light " %>
      </h4>
    </div>
  </div>
  <table border="1" class="table">
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name + "　　" + @customer.last_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.first_name_kana + "　　" + @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="row" >
    <div class="col-lg-4">
      <h4>配送先　　
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary text-light " %>
      </h4>
    </div>
  </div>
    <div class="row" >
    <div class="col-lg-4">
      <h4>注文履歴　
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary text-light " %>
