<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <h4 class="bg-light text-center">
        配送先編集
      </h4>
    </div>
  </div>
  <%= form_with model: @address, url: address_path(@address.id) do |f| %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <div class="form-group row">
      <label for="post_code" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
      <div class="col-sm-3">
        <%= f.number_field :post_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="address" class="col-sm-3 col-form-label">住所</label>
      <div class="col-sm-5">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-sm-3 col-form-label">住所</label>
      <div class="col-sm-3">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-sm-2"></div>
      <div class="col-sm-1">
        <%= f.submit "変更内容を保存" ,class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>