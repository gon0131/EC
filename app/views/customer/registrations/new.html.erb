<%= render "/layouts/header" %>
<div class="container">
  <h4>新規会員登録</h4>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
    <table>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :"(姓)" %></td>
          <td><%= f.text_field :first_name %></td>
          <td><%= f.label :"　　(名)" %></td>
          <td><%= f.text_field :last_name %></td>
        </tr>
        
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :"(セイ)" %></td>
          <td><%= f.text_field :first_name_kana %></td>
          <td><%= f.label :"　　(メイ)" %></td>
          <td><%= f.text_field :last_name_kana %></td>
        </tr>
        
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td colspan="2"></td>
        </tr>
        
        <tr>
          <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code %></td>
          <td colspan="2"></td>
        </tr>
        
        <tr>
          <td><%= f.label :"住所" %></td>
          <td></td>
          <td><%= f.text_field :address %></td>
        </tr>
        
        <tr>
          <td><%= f.label :"電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :phone_number %></td>
          <td colspan="2"></td>
        </tr>
        
        <tr>
          <td><%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          </td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td colspan="2"></td>
        </tr>
      
        <tr>
          <td><%= f.label :"パスワード(確認用)" %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td colspan="2"></td>
        </tr>
      
        <div class="actions">
          <tr>
            <td colspan="2"></td>
            <td><%= f.submit "新規登録" ,class: "btn-success" %></td>
          </tr>
        </div>
      </tbody>
     </table>
  <% end %>
  <h4>既に登録済みの方</h4>
  <%= render "customer/shared/links" %>
</div>